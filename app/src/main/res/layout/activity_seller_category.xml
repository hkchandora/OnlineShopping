<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sellers.SellerCategory">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add New Product"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="5dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/t_shirt"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/tshirts"/>

        <ImageView
            android:id="@+id/sport_t_shirt"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/sports"/>

        <ImageView
            android:id="@+id/female_dress"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/female_dresses"/>

        <ImageView
            android:id="@+id/sweather"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/sweather"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout2"
        android:orientation="horizontal"
        android:padding="5dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/glass"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/glasses"/>

        <ImageView
            android:id="@+id/bag"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/purses_bags"/>

        <ImageView
            android:id="@+id/hat"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/hats"/>

        <ImageView
            android:id="@+id/shoes"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/shoess"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout3"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="5dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/head_phone"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/headphoness"/>

        <ImageView
            android:id="@+id/laptop"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/laptops"/>

        <ImageView
            android:id="@+id/watch"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/watches"/>

        <ImageView
            android:id="@+id/mobile"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/mobiles"/>
    </LinearLayout>


</RelativeLayout>