<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Admin.MaintainProducts"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="15dp"
    android:layout_marginBottom="10dp"
    app:cardElevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/maintain_product_item_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="2dp"
            android:scaleType="centerInside"
            android:src="@drawable/product_image_placeholder" />

        <EditText
            android:id="@+id/maintain_product_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Product Name"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:layout_below="@+id/maintain_product_item_image"
            android:textSize="20sp"
            android:background="@drawable/input_design"
            android:padding="12dp"
            android:layout_margin="5dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/maintain_product_item_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/maintain_product_item_name"
            android:hint="Product price"
            android:textAlignment="center"
            android:background="@drawable/input_design"
            android:padding="12dp"
            android:layout_margin="5dp"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/maintain_product_item_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/maintain_product_item_price"
            android:layout_marginTop="2dp"
            android:hint="Product Description"
            android:textAlignment="center"
            android:background="@drawable/input_design"
            android:padding="12dp"
            android:layout_margin="5dp"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />

        <Button
            android:id="@+id/maintain_apply_change_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/maintain_product_item_description"
            android:layout_marginTop="2dp"
            android:text="Apply Change"
            android:textAlignment="center"
            android:background="@drawable/buttons"
            android:padding="12dp"
            android:textAllCaps="false"
            android:layout_margin="5dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="18sp" />

        <Button
            android:id="@+id/maintain_delete_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/maintain_apply_change_btn"
            android:text="Delete Product"
            android:textAlignment="center"
            android:background="@drawable/buttons"
            android:padding="12dp"
            android:onClick="DeleteProduct"
            android:textAllCaps="false"
            android:layout_margin="30dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="18sp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>