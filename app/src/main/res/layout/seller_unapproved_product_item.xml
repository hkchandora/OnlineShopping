<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/seller_product_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"/>

        <ImageView
            android:id="@+id/seller_product_item_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/product_image_placeholder"
            android:layout_below="@+id/seller_product_item_name"
            android:scaleType="centerInside"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/seller_product_item_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product price"
            android:textAlignment="center"
            android:layout_below="@+id/seller_product_item_image"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"/>

        <TextView
            android:id="@+id/seller_product_item_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Description"
            android:textAlignment="center"
            android:layout_below="@+id/seller_product_item_price"
            android:textSize="16sp"
            android:layout_marginTop="2dp"
            android:textColor="@color/colorPrimary"/>

        <TextView
            android:id="@+id/seller_product_item_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Status"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_below="@+id/seller_product_item_description"
            android:textSize="16sp"
            android:layout_marginTop="2dp"
            android:textColor="@color/colorPrimary"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>